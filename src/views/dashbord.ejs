    // تأخير إخفاء مؤشر التحميل لمدة 3 ثوانٍ (يمكنك تغيير الفترة حسب احتياجاتك)
    setTimeout(function() {
        loadingContainer.style.display = "none";
    }, 1500); // 3000 مللي ثانية أي 3 ثوانٍ
}); 
    </script>