<body>

  <header>
    <h1>Settings</h1>
  </header>

  <main>
    <div id="notification-bar" class="notification-bar">
        <% if (alert) { %>
          <%= alert %>
        <% } %>
      </div>

      <script>
        // Wait for the DOM to load
        document.addEventListener("DOMContentLoaded", function () {
          // Select the notification bar element
          var notificationBar = document.getElementById("notification-bar");
      
          // Check if the notification bar exists
          if (notificationBar) {
            // Set a timeout to hide the notification bar after 5000 milliseconds (adjust as needed)
            setTimeout(function () {
              notificationBar.style.top = "-50px"; // Move the notification bar off the screen
            }, 1000);
          }
        });
      </script>
    <form action="/dashboard/<%= guild.id %>/suggestions" method="post">

        <label for="suggestionChannel" style="color: #fff;">Suggestion Channel:</label>
        <select name="suggestionChannel" id="suggestionChannel" class="p-input">
          <% guild.channels.cache.filter(channel => channel.type === 'text').forEach(channel => { %>
            <option value="<%= channel.id %>"><%= channel.name %></option>
          <% }); %>
        </select>
  
       
        </select>
  

  
        <div class="customize">
            <h2 style="color: #fff;">Customize Your Embed</h2>
            <br>
            <p style="color: #fff;"><input type="color" name="color" value="<%= settings.suggestion.suggestioncolor %>">&nbsp; Embed Color</p>
            <br>
            <p style="color: #fff;"><bold>Embed Description</bold></p>
            <textarea  name="description" id="myInput" placeholder="Your Description" rows="3" wrap="soft" class="col-12 form-control" maxlength="1024" type="text" style="max-width: 400px; min-width: 400px;
            max-height:200px; background-color: #0f0f0f; color: white;" ><%= settings.suggestion.description || `{suggestion}`%></textarea>
            <small id="textareaHide"class="form-text text-muted" style="color: white"></small>
            <br>
            <br>
            <p style="color: #fff;"><bold>Embed Footer</bold></p>
            <input name="footer" class="form-control" value="<%= settings.suggestion.footer ||`Requested by {user_tag}`%>" style="background-color: #0a0a0a; width: 400px; color: white" type="text"/>
            <br>

            <p style="color: #fff;">Choose your reaction</p>
            <% if(settings.suggestion.reaction == "1") {%>
            <div class="form-check">
              <input value="1" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked>
              <label style="color:white" class="form-check-label" for="flexRadioDefault1">
                
              </label>
            </div>
            <div class="form-check" style="color: white">
              <input value="2" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
              <label class="form-check-label" for="flexRadioDefault2">
                👍 - 👎
              </label>
            </div>
            <div class="form-check" style="color: white">
              <input value="3" class="form-check-input" type="radio" name="flexRadioDefault" >
              <label class="form-check-label" for="flexRadioDefault2">
                ✅ - ❌
              </label>
            </div>
            <% } else if(settings.suggestion.reaction == "2") {%>
            <div class="form-check">
           
              <label style="color:white" class="form-check-label" for="flexRadioDefault1">
              </label>
            </div>
            <div class="form-check" style="color: white">
              <input value="2" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
              <label class="form-check-label" for="flexRadioDefault2">
                👍 - 👎
              </label>
            </div>
            <div class="form-check" style="color: white">
              <input value="3" class="form-check-input" type="radio" name="flexRadioDefault" >
              <label class="form-check-label" for="flexRadioDefault2">
                ✅ - ❌
              </label>
            </div>
            <% } else if(settings.suggestion.reaction == "3") { %>
            <div class="form-check">
              <input value="1"  class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
              <label style="color:white" class="form-check-label" for="flexRadioDefault1">
              </label>
            </div>
            <div class="form-check" style="color: white">
              <input value="2" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
              <label class="form-check-label" for="flexRadioDefault2">
                👍 - 👎
              </label>
            </div>
            <div class="form-check" style="color: white">
              <input value="3" class="form-check-input" type="radio" name="flexRadioDefault" checked>
              <label class="form-check-label" for="flexRadioDefault2">
                ✅ - ❌
              </label>
            </div>
            <% } else { %>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked>
              <label style="color:white" class="form-check-label" for="flexRadioDefault1">
              </label>
            </div>
            <div class="form-check" style="color: white">
              <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
              <label class="form-check-label" for="flexRadioDefault2">
                👍 - 👎
              </label>
            </div>
            <div class="form-check" style="color: white">
              <input class="form-check-input" type="radio" name="flexRadioDefault" >
              <label class="form-check-label" for="flexRadioDefault2">
                ✅ - ❌
              </label>
            </div>
            <% } %>
            <br>
          
        <button type="submit">Save Changes</button> <a class="mainbtn" href="/">home</a>
      </form>
      <br>

  </main>
